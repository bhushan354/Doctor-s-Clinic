<h1 class="my-4 text-center">Patients List</h1>

<table class="table table-bordered">
  <thead class="custom-bg-light-blue">
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Address</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.phone_number %></td>
      <td><%= patient.birth_date %></td>
      <td><%= patient.gender %></td>
      <td><%= patient.address %></td>
      <td>
        <%= link_to 'Edit', edit_patient_path(patient), class: 'btn btn-primary'
        %>
      </td>
      <td>
        <%= link_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= link_to 'Register New Patient', new_patient_path, class: 'btn btn-success'
  %>
</div>
