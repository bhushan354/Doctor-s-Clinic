<h1>All Patients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.phone_number %></td>
        <td><%= patient.birth_date %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
