<h1 class="my-4 text-center">Patients List</h1>

<table class="table table-bordered">
  <thead class="custom-bg-light-blue">
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.name %></td>
      <td><%= patient.phone_number %></td>
      <td><%= patient.birth_date %></td>
      <td><%= patient.gender %></td>
      <td><%= patient.address %></td>
    </tr>
    <% end %>
  </tbody>
</table>

  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
